int main()
{
    float price = 9.90;
    int quantity;
    const int DISC = 10;
    float totalprice;
    
    cout<<"Please tell us how much you want to purchase"<<endl;
    cin>>quantity;
    
    totalprice = (price*quantity) * (100-DISC)/100.00;
    
    cout<<"The total price is "<<totalprice<<endl;
	
	return 0 ;
}