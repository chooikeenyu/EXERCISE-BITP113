#include <iostream>
using namespace std;

int main()
{
   int num1,num2,sum,difference;
   
   cout<<"Enter any two number"<<endl;
   cin>>num1;
   cin>>num2;
   
   sum = num1 + num2;
   
   if (num1>num2)
      difference = num1 - num2;
    else
      difference = num2 - num1;
     
   if (sum>difference)
      cout<<"The addition of two number is"<<sum<<endl;
      
   else
      cout<<"The subtraction of two number is"<<difference<<endl;
      
    return 0;
}