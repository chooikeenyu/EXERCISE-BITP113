#include <iostream>
using namespace std;

int main()
{
    
    int i, x, difference, z;
    int arr[5];
    cout<<"Enter 5 scores: ";
    
    for(int i=0; i<5; i++)
    {
        cin>>arr[i];
    }
    
    x = arr[0]; //let x = arr[0] which x = 5
    
    
    for(int i=1; i<=5; i++)
    {
        if (arr[0] < arr[i])
              arr[0] = arr[i];
              
    }
  
    
    cout<<"The highest score is "<<arr[0]<<endl;    //now arr[0]is 10
   z = arr[0];

    arr[0] = x; //let arr[0] be 5
    
  
    for(int i=0; i<5; i++)
    {
        cout<<arr[i]<<" off by ";
           
        difference = z - arr[i];
                
        cout<<difference<<endl;
    }
   
    return 0;
    
}